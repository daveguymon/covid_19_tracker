<div class="card col-lg-12" style="width: 400px;">
  <% if @country %>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= @country["country"] %></li>
      <li class="list-group-item">Confirmed: <%= number_with_delimiter(@country["confirmed"], :delimiter => ",") %></li>
      <li class="list-group-item">Recovered: <%= number_with_delimiter(@country["recovered"], :delimiter => ",") %></li>
      <li class="list-group-item">Critical: <%= number_with_delimiter(@country["critical"], :delimiter => ",") %></li>
      <li class="list-group-item">Deaths: <%= number_with_delimiter(@country["deaths"], :dlimiter => ",") %></li>
      <% if @country["lastUpdate"] %>
        <li class="list-group-item">Last updated <%= time_ago_in_words(DateTime.parse(@country["lastUpdate"])) %> ago.</li>
      <% else %>
        <li class="list-group-item">Data not collected by this country.</li>
      <% end %>
    </ul>
  <% else %>
    <div class="alert alert-warning"><%= flash[:alert] %></div>
  <% end %>
</div>

