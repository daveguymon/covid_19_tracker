<div class="container">
  <div class="row mt-5">
    <div class="col-lg-6">
      <h1>Country Info</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Country</th>
            <th scope="col">Confirmed</th>
            <th scope="col">Recovered</th>
            <th scope="col">Critical</th>
            <th scope="col">Deaths</th>
            <th scope="col">Updated</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td scope="row"><%= @country["country"] %></td>
            <td scope="row"><%= @country["confirmed"] %></td>
            <td scope="row"><%= @country["recovered"] %></td>
            <td scope="row"><%= @country["critical"] %></td>
            <td scope="row"><%= @country["deaths"] %></td>
            <td scope="row"><%= DateTime.parse(@country["lastUpdate"]).strftime('%b %d %Y') %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

